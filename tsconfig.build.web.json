{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./www",
    "rootDir": "./src/www",
    "noEmit": false,
    "sourceMap": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "src/www/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ]
}