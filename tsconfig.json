{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    // Output
    "noEmit": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,

    // Module Resolution
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    // Type Checking - STRICT
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "checkJs": true,

    // Decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Types
    "types": ["mocha", "node", "@iobroker/adapter-core"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": [],
  "files": [],
  "references": [
    { "path": "./tsconfig.build.json" },
    { "path": "./tsconfig.build.web.json" },
    { "path": "./tsconfig.test.json" }
  ]
}