{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    // Output
    "noEmit": false,
    "outDir": "./build",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "composite": true,
    "tsBuildInfoFile": "./build/tsconfig.tsbuildinfo",
    "newLine": "lf",

    // Module Resolution
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Type Checking - STRICT
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "checkJs": false,

    // Decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Types
    "types": ["mocha", "node", "@iobroker/adapter-core"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/www"]
}