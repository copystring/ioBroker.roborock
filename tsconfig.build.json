{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./build",
    "rootDir": "./src",
    "composite": true,
    "tsBuildInfoFile": "./build/tsconfig.build.tsbuildinfo",
    "allowJs": false,
    "checkJs": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**",
    "src/www/**",
    "**/*.test.ts"
  ]
}