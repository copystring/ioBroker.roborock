{
  "name": "iobroker.roborock",
  "version": "0.6.19",
  "description": "roborock",
  "author": {
    "name": "copystring",
    "email": "copystring@gmail.com"
  },
  "homepage": "https://github.com/copystring/ioBroker.roborock",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "template",
    "Smart Home",
    "home automation",
    "roborock"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/copystring/ioBroker.roborock"
  },
  "engines": {
    "node": ">= 22"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "@napi-rs/canvas": "^0.1.85",
    "axios": "^1.13.2",
    "binary-parser": "^2.3.0",
    "crc-32": "^1.2.2",
    "d3": "^7.9.0",
    "go2rtc-static": "^1.2.0",
    "image-size": "^2.0.2",
    "jszip": "^3.10.1",
    "mqtt": "^5.14.1",
    "node-forge": "^1.3.3",
    "p-queue": "^9.0.1",
    "ping": "^1.0.0",
    "protobufjs": "^8.0.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@alcalzone/release-script-plugin-manual-review": "^4.0.0",
    "@google/generative-ai": "^0.24.1",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.2.2",
    "@tsconfig/node22": "^22.0.5",
    "@types/binary-parser": "^1.5.5",

    "@types/d3": "^7.4.3",
    "@types/node": "^22.10.5",
    "@types/node-forge": "^1.3.14",
    "@types/ping": "^0.4.4",
    "@types/proxyquire": "^1.3.31",

    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^4.0.17",
    "ajv": "^8.17.1",
    "chokidar": "^5.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.1.2",
    "shx": "^0.4.0",
    "strip-json-comments": "^3.1.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "yaml-lint": "^1.7.0"
  },
  "main": "src/main.ts",
  "files": [
    "src/",
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "www/",
    "lib/protocols/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "clean": "shx rm -rf www/*.js www/*.js.map www/*.d.ts www/*.tsbuildinfo",
    "build": "npm run clean && npm run lint && npm run build:www && npm run docs",
    "build:www": "esbuild src/www/map.ts --bundle --minify --sourcemap --outfile=www/app.js --format=esm",
    "watch": "npm run clean && npm run watch:www",
    "watch:www": "esbuild src/www/map.ts --bundle --sourcemap --outfile=www/app.js --format=esm --watch",
    "test:unit": "vitest run",
    "test": "npm run test:unit && npm run test:integration && npm run test:package",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "mocha test/integration.js --exit",
    "test:package": "mocha test/package.js --exit",
    "lint": "eslint . --max-warnings 0 && npm run lint:yaml",
    "lint:yaml": "npx yaml-lint \"**/*.yml\" \"**/*.yaml\" --ignore \"node_modules\"",
    "verify": "npm run lint && tsc --noEmit && npm run test",
    "translate": "translate-adapter",
    "watch:all": "node scripts/watch-build.js",
    "docs": "node scripts/generate-docs.js",
    "copy:protocols": "shx mkdir -p build/lib/protocols && shx cp lib/protocols/*.json build/lib/protocols/",
    "build:git": "npm run clean && npm run copy:protocols && tsc -b tsconfig.json && npm run build:www",
    "prepare": "npm run build:git"
  },
  "bugs": {
    "url": "https://github.com/copystring/ioBroker.roborock/issues"
  },
  "readmeFilename": "README.md"
}
