  "description": "roborock",
  "author": {
    "name": "copystring",
    "email": "copystring@gmail.com"
  },
  "homepage": "https://github.com/copystring/ioBroker.roborock",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "template",
    "Smart Home",
    "home automation",
    "roborock"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/copystring/ioBroker.roborock"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@iobroker/adapter-core": "3.3.2",
    "@napi-rs/canvas": "0.1.85",
    "axios": "1.13.2",
    "binary-parser": "^2.3.0",
    "canvas2svg": "^1.0.16",
    "crc-32": "^1.2.2",
    "d3": "^7.9.0",
    "go2rtc-static": "^1.2.0",
    "image-size": "^1.1.1",
    "jszip": "^3.10.1",
    "marching-squares": "^1.0.0",
    "mqtt": "5.14.1",
    "node-forge": "^1.3.3",
    "p-queue": "^9.0.1",
    "ping": "^1.0.0",
    "uuid": "13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@alcalzone/release-script": "5.0.0",
    "@alcalzone/release-script-plugin-iobroker": "4.0.0",
    "@alcalzone/release-script-plugin-license": "4.0.0",
    "@alcalzone/release-script-plugin-manual-review": "4.0.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "5.2.2",
    "@tsconfig/node18": "^18.2.6",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^8.0.0",
    "@types/d3": "^7.4.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^25.0.3",
    "@types/node-forge": "^1.3.14",
    "@types/ping": "^0.4.4",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^21.0.0",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "ajv": "^8.17.1",
    "chai": "^4.4.1",
    "chai-as-promised": "^8.0.0",
    "eslint": "9.39.2",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^10.2.0",
    "proxyquire": "^2.1.3",
    "rimraf": "6.1.2",
    "sinon": "^21.0.1",
    "sinon-chai": "^3.7.0",
    "strip-json-comments": "^3.1.1",
    "typescript": "5.9.3",
    "vitest": "4.0.16",
    "yaml-lint": "^1.7.0"
  },
  "main": "build/main.js",
  "files": [
    "build/",
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf build",
    "copy:pathProcessor": "shx cp src/lib/pathProcessor.ts src/www/pathProcessor.ts",
    "build": "npm run clean && node scripts/updateBuildInfo.js && tsc -b tsconfig.json",
    "build:www": "npm run copy:pathProcessor && tsc -b tsconfig.web.json",
    "build:all": "npm run build",
    "watch": "npm run clean && tsc -b tsconfig.json --watch",
    "watch:www": "npm run copy:pathProcessor && tsc -b tsconfig.web.json --watch",
    "__comment_mocha": "Mocha tests: 1. Everything in 'build' EXCEPT 'www'. 2. The 'test' folder.",
    "test:js": "tsc -p tsconfig.json && npx mocha --config test/mocharc.custom.json \"build/!(www)/**/*.test.js\"",
    "test:package": "npx mocha test/package test/validate_configs --exit",
    "test:integration": "npx mocha test/integration --exit",
    "test:watch": "npx mocha --watch --config test/mocharc.custom.json \"build/!(www)/**/*.test.js\"",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc -b tsconfig.json --dry",
    "predev": "npm run copy:pathProcessor",
    "dev": "node dev-server.js",
    "lint:yaml": "npx yaml-lint \"**/*.yml\" \"**/*.yaml\" --ignore \"node_modules\"",
    "lint": "eslint . && npm run lint:yaml",
    "translate": "translate-adapter",
    "release": "release-script",
    "__comment_vitest": "Vitest tests ONLY 'src/www'",
    "dev:www": "npm run copy:pathProcessor && vitest watch src/www",
    "test:www": "npm run copy:pathProcessor && vitest run src/www",
    "test:all": "npm run test && npm run test:www",
    "verify": "npm run lint && npm run ai:review",
    "ai:review": "node scripts/ai-review-diff.js",
    "commit": "npm run verify && git commit",
    "prepare": "husky"
  },
  "bugs": {
    "url": "https://github.com/copystring/ioBroker.roborock/issues"
  },
  "readmeFilename": "README.md"
}
