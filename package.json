  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "watch": "npm run clean && tsc -p tsconfig.build.json --watch",
    "__comment_mocha": "Mocha testet: 1. Alles in 'build' AUSSER 'www'. 2. Den 'test'-Ordner.",
    "test:js": "npx mocha --config test/mocharc.custom.json \"build/!(www)/**/*.test.js\" \"test/**/test!(PackageFiles|Startup).js\"",
    "test:package": "npx mocha test/package --exit",
    "test:integration": "npx mocha test/integration --exit",
    "test:watch": "npx mocha --watch --config test/mocharc.custom.json \"build/!(www)/**/*.test.js\" \"test/**/test!(PackageFiles|Startup).js\"",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "dev": "npm run watch & npm run test:watch",
    "lint": "eslint .",
    "translate": "translate-adapter",
    "release": "release-script",
    "__comment_vitest": "Vitest testet NUR 'src/www'",
    "dev:www": "vitest watch src/www",
    "test:www": "vitest run src/www",
    "test:all": "npm run test && npm run test:www"
